<?xml version='1.0' encoding='utf-8'?>
<widget id="org.adaptivedesign.m2g" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="adaptivedesign.org">
    <name>TandemMaster M2G Text-to-Speech</name>
    <description>
        Text-to-Speech using Responsivetalk or Cordova TTS Plugin and TandemMaster
    </description>
    <author email="jason@adaptivedesign.org" href="adaptivedesign.org">
        Adaptive Design Association
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.3.0" />
    <engine name="ios" spec="^4.5.4" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-tts" spec="^0.2.3" />
</widget>
