<?xml version='1.0' encoding='utf-8'?>
<widget id="org.adaptivedesign.m2g" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="adaptivedesign.org">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="WebSocketServer">
        <param name="android-package" value="net.becvert.cordova.WebSocketServerPlugin" />
    </feature>
    <feature name="TTS">
        <param name="android-package" value="com.wordsbaking.cordova.tts.TTS" />
        <param name="onload" value="true" />
    </feature>
    <name>TandemMaster M2G Text-to-Speech</name>
    <description>
        Text-to-Speech using Responsivetalk or Cordova TTS Plugin and TandemMaster
    </description>
    <author email="jason@adaptivedesign.org" href="adaptivedesign.org">
        Adaptive Design Association
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
</widget>
